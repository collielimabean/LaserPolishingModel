<UserControl x:Class="LaserPolishingModelSimulator.Modules.OutputDisplay.Views.OutputDisplayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:common="clr-namespace:LaserPolishingModelSimulator.Common"
             xmlns:surfplot="clr-namespace:LaserPolishingModelSimulator.Common.SurfacePlot3D"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="500"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid Background="White">
        <TabControl TabStripPlacement="Bottom">
            <TabItem Header="Ripples">
                <surfplot:SurfacePlotView Title="Ripples"
                    DataContext="{Binding RipplesModel, UpdateSourceTrigger=PropertyChanged}"/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
