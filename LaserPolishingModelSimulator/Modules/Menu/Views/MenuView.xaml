<UserControl x:Class="LaserPolishingModelSimulator.Modules.Menu.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d" d:DesignHeight="25" d:DesignWidth="300">
    <Grid>
        <Menu Visibility="Visible">
            <MenuItem Header="_File">
                <MenuItem Header="_Exit" Click="OnExitMenuClick"/>
            </MenuItem>

            <MenuItem Header="_Language">
                <MenuItem Header="English (US)" Click="LanguageItemClick" IsChecked="True"/>
            </MenuItem>

            <MenuItem Header="_Help">
                <MenuItem Header="_About"/>
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
